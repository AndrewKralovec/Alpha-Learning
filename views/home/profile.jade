extends ../layout
block content
  link(href='/stylesheets/user.css', rel='stylesheet')
  script(src="/javascripts/controllers/profileCtrl.js")
  .container(ng-app='profileModule', ng-controller='profileCtrl' , ng-init="courses= #{JSON.stringify(courses)}; user=#{JSON.stringify(user)}")
    .row
      // Center Profile 
      .col-md-8.col-md-offset-2
        .well.profile
          .col-sm-12
            .col-xs-12.col-sm-8(ng-model='username', ng-init="user.username")
              h2 {{username}}
              p
                strong About: 
                |  Software developer
              p
                strong Hobbies: 
                |  Read, out with friends, listen to music, draw and learn new things.
              p
                strong Date of Birth: 
                |  04/05/1993
              p
                strong Contact: 
                a(href='#') {{user.email}}
              // Do a change to pill when time allows 
                 Possible tags change 
              // Possible switch to a drop down. Idk what will look better
              p
                .dropdown
                  button.btn.btn-primary.dropdown-toggle(type='button', data-toggle='dropdown')
                    span.fa.fa-book
                    |  Courses   
                    span.caret
                  ul.dropdown-menu
                    li(ng-repeat='course in courses')
                      a(href='/Courses/{{course.path}}') 
                        span.fa.fa-chevron-right
                        |  {{course.name}}
                    li.divider  
                    li
                      a(href='/Courses', role='button')  Search 
            .col-xs-12.col-sm-4.text-center
              figure
                img.img-circle.img-responsive(ng-src='/images/Avatars/{{user.avatar}}', alt='')
                // Star rating 
                figcaption.ratings
                  p
                    | Ratings
                    a(href='#')
                      span.fa.fa-star
                    a(href='#')
                      span.fa.fa-star
                    a(href='#')
                      span.fa.fa-star
                    a(href='#')
                      span.fa.fa-star
                    a(href='#')
                      span.fa.fa-star-o
                p 4.0
          .col-xs-12.divider.text-center
            // Followers 
            .col-xs-12.col-sm-4.emphasis
              h2
                strong  20,7K 
              p
                small Followers
              button.btn.btn-success.btn-block
                span.fa.fa-plus-circle
                |  Follow
            // Posts 
            .col-xs-12.col-sm-4.emphasis
              h2
                strong 3
              p
                small Posts
              button.btn.btn-info.btn-block
                span.fa.fa-user
                |  Recent Post
            // Snipptets 
            .col-xs-12.col-sm-4.emphasis
              h2
                strong 43
              p
                small Snippets
              .btn-group.dropup.btn-block
                button.btn.btn-primary(type='button')
                  span.fa.fa-gear
                  |  Options
                button.btn.btn-primary.dropdown-toggle(type='button', data-toggle='dropdown')
                  span.caret
                  span.sr-only Toggle Dropdown
                ul.dropdown-menu.text-left(role='menu')
                  li
                    a(href='#')
                      span.fa.fa-envelope.pull-right
                      |  Send an email
                  li
                    a(href='#')
                      span.fa.fa-list.pull-right
                      |  Add or remove from a list
                  li.divider
                  li
                    a(href='#')
                      span.fa.fa-warning.pull-right
                      | Report this user for spam
                  li.divider
                  li
                    a.btn.disabled(href='#', role='button')  Unfollow 
