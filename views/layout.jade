html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="description", content="")
    meta(name="author", content="")
    title Alpha Learning
    // CSS
    link(href="/stylesheets/bootstrap.min.css", rel="stylesheet")
    link(href="/stylesheets/style.css", rel="stylesheet")
    link(href="/stylesheets/font-awesome/css/font-awesome.min.css", rel="stylesheet", type="text/css")
    // JS
    script(src="/javascripts/angular.js")
    script(src="/javascripts/angular.min.js")
  body
    // Navigation
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
        // Brand and toggle
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Alpha Learning
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          // Static display at top
          ul.nav.navbar-nav
            li
              a(href='#') About
            li
              a(href='#') Services
            li
              a(href='#') Contact
          // User nav bar
          ul.nav.navbar-nav(style='float: right;')
            // If logged int display this info at the top 
            if navLog
              // Account Dropdown
              li.dropdown
                a.dropdown-toggle(aria-expanded='false', data-toggle='dropdown', href='#')
                  i.fa.fa-user.fa-fw
                  i.fa.fa-caret-down
                ul.dropdown-menu.dropdown-user
                  li
                    a(href='#')
                      i.fa.fa-user.fa-fw
                      |  User Profile
                  li
                    a(href='#')
                      i.fa.fa-gear.fa-fw
                      |  Settings
                  li.divider
                  li
                    a(href='login.html')
                      i.fa.fa-sign-out.fa-fw
                      |  Logout
    // Content of pages loaded 
    block content
  // Bottom page
  script(src='/javascripts/jquery.js')
  // Bootstrap Core JavaScript
  script(src='/javascripts/bootstrap.min.js')
